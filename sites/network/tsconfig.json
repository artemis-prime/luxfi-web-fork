{
  "extends": "../../tsconfig.base.json",
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    ".next/types/**/*.ts",
    "node_modules/@luxfi/core",
    "node_modules/@luxfi/core/node_modules/@hanzo/*"
  ],
  "exclude": ["node_modules"],

  "compilerOptions": {
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      // https://remarkablemark.org/blog/2023/06/30/react-types-reactnode-error/
      "react": ["node_modules/@types/react"],
      "@luxfi/core": ["node_modules/@luxfi/core"],
      "@hanzo/*": ["node_modules/@luxfi/core/node_modules/hanzo/*"]
    },
    "plugins": [{"name": "next"}]
  }
}
